pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], userRemoteConfigs: [[url: 'https://github.com/OEMromanca/book_store.git']]])
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t jenkins:${env.BUILD_NUMBER} .'
                }
            }
        }
        
        stage('Run Docker Containers') {
            steps {
                sh 'docker run -d -p 8080:8080 --name jenkins jenkins:${env.BUILD_NUMBER}'
            }
        }
    }
}
