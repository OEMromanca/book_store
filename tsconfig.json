{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./",
      "resolveJsonModule": true
    },
    "include": ["backend/**/*", "frontend/**/*"],
    "references": [
      { "path": "./backend" },
      { "path": "./frontend" }
    ]
  }
  