{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./",
      "resolveJsonModule": true
    },
    "include": ["back-end/**/*.ts", "frontend/**/*.ts"],
    "references": [
      { "path": "./backend" },
      { "path": "./frontend" }
    ]
  }
  