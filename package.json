{
  "homepage": "https://oemromanca.github.io/book_store/",

  "name": "book_store",
  "version": "1.0.0",
  "description": "book-store-app",
  "main": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && npx ts-node src/server.ts",
    "frontend": "cd frontend && npm run dev",
    "build": "npm run build-frontend && npm run build-backend",
    "build-frontend": "cd frontend && npm run build",
    "build-backend": "cd backend && tsc",
    "build-root": "npm run build-frontend && mkdir -p dist && cp -R frontend/dist/* dist/",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OEMromanca/book_store.git"
  },
  "author": "oem",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/OEMromanca/book_store/issues"
  },
  "dependencies": {
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "gh-pages": "^6.0.0"
  }
}
